---
interface Props {
  name: string;
  size?: number;
  width?: number;
  height?: number;
  class?: string;
}

const { name, size, width, height, class: className } = Astro.props;

const w = width ?? size ?? 24;
const h = height ?? size ?? 24;
---

<svg
  width={w}
  height={h}
  fill="currentColor"
  aria-hidden="true"
  class={className}
>
  <use href={`/icons.svg#icon-${name}`} />
</svg>
