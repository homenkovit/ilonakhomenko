---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
import Icon from "./Icon.astro";

interface Certificate {
  src: ImageMetadata;
  alt: string;
}

interface Props {
  images: Certificate[];
  mode?: 'inline' | 'modal';
}

const { images, mode = 'inline' } = Astro.props;
const totalSlides = images.length;
---

<div
  class="carousel"
  role="region"
  aria-label="Карусель сертификатов"
  aria-roledescription="carousel"
  data-mode={mode}
>
  <div class="carousel-main">
    <button
      class="nav-button"
      aria-label="Предыдущий слайд"
      data-action="prev"
      disabled
    >
      <Icon name="arrow-prev-lg" size={104} />
    </button>

    <div class="carousel-viewport">
      <div class="carousel-track" aria-live="polite">
        {images.map((image, index) => (
          <div
            class="carousel-slide"
            role="group"
            aria-roledescription="slide"
            aria-label={`${index + 1} из ${totalSlides}`}
            aria-hidden={index !== 0 ? "true" : undefined}
            inert={index !== 0 ? true : undefined}
            data-slide-index={index}
          >
            {mode === 'inline' ? (
              <button
                class="slide-button"
                aria-label={`Открыть ${image.alt} в полноэкранном режиме`}
                data-action="open-modal"
                data-slide-index={index}
              >
                <Image src={image.src} alt={image.alt} width={472} loading="lazy" />
              </button>
            ) : (
              <Image src={image.src} alt={image.alt} loading="lazy" />
            )}
          </div>
        ))}
      </div>
    </div>

    <button
      class="nav-button"
      aria-label="Следующий слайд"
      data-action="next"
      disabled={totalSlides === 1}
    >
      <Icon name="arrow-next-lg" size={104} />
    </button>
  </div>

  <span class="counter" aria-live="polite">1 из {totalSlides}</span>
</div>

{mode === 'inline' && (
  <dialog id="certificate-modal" class="carousel-modal" aria-label="Полноэкранный просмотр сертификата">
    <button class="close-modal-button" aria-label="Закрыть">
      <Icon name="close" size={44} />
    </button>

    <div class="modal-content">
      <Astro.self images={images} mode="modal" />
    </div>
  </dialog>
)}

<style>
  .carousel-main {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 38px;

    @media screen and (width < 768px) {
      gap: 24px;
    }
  }

  .carousel-viewport {
    flex: 1;
    overflow: hidden;
    height: 652px;

    .carousel[data-mode=inline] & {
      max-width: 472px;
    }

    @media screen and (width < 460px) {
      height: auto;
    }
  }

  .carousel-track {
    display: flex;
    align-items: center;
    max-width: 100%;
    height: 100%;

    @media (prefers-reduced-motion: no-preference) {
      transition: transform 0.3s ease;
    }
  }

  .carousel-slide {
    flex: 0 0 100%;
    display: flex;
    justify-content: center;
    min-width: 0;
    height: 100%;

    img {
      max-width: 100%;
      max-height: 100%;
      width: auto;
      height: auto;
      display: block;
      object-fit: contain;
      object-position: center;
    }
  }

  .slide-button {
    padding: 0;
    border: none;
    background-color: transparent;
    color: inherit;
    cursor: pointer;
  }

  .nav-button {
    flex-shrink: 0;
    padding: 0;
    border: none;
    background-color: transparent;
    color: inherit;
    cursor: pointer;

    @media (prefers-reduced-motion: no-preference) {
      transition: color 0.2s ease;
    }

    @media (hover: hover) {
      &:hover:not(:disabled) {
        color: var(--hover-color);
      }
    }

    &:disabled {
      color: #d9d9d9;
      cursor: not-allowed;
    }

    @media screen and (width < 768px) {
      svg {
        width: 44px;
        height: 44px;
      }
    }

    @media screen and (width < 600px) {
      z-index: 1;
      position: absolute;

      &[data-action=prev] {
        left: 20px;
      }

      &[data-action=next] {
        right: 20px;
      }
    }
  }

  .counter {
    --margin-block-start: 32px;
    display: block;
    margin-block-start: var(--margin-block-start);
    font-size: 20px;
    line-height: 30px;
    text-align: center;
  }

  .carousel-modal {
    --block-padding: 100px;
    --inline-padding: 40px;
    position: fixed;
    inset: 0;
    width: 100%;
    max-width: 100%;
    height: 100%;
    max-height: 100%;
    padding: 0;
    border: none;
    background-color: #ffffff;
    margin: 0;

    @media (prefers-reduced-motion: no-preference) {
      transition:
        opacity 0.3s ease,
        transform 0.3s ease,
        display 0.3s ease allow-discrete,
        overlay 0.3s ease allow-discrete;

      @starting-style {
        opacity: 0;
        transform: scale(0.95);
      }
    }

    &:not([open]) {
      opacity: 0;
      transform: scale(0.95);
    }

    &::backdrop {
      background-color: rgb(0 0 0 / 50%);

      @media (prefers-reduced-motion: no-preference) {
        transition:
          opacity 0.3s ease,
          display 0.3s ease allow-discrete,
          overlay 0.3s ease allow-discrete;

        @starting-style {
          opacity: 0;
        }
      }
    }

    &:not([open])::backdrop {
      opacity: 0;
    }

    .carousel-main {
      padding: var(--block-padding) var(--inline-padding);

      @media screen and (width >= 600px) {
        justify-content: space-between;
      }
    }

    .carousel-viewport {
      width: auto;
      height: calc(100vh - var(--block-padding) * 2);
    }

    .carousel-track {
      height: 100%;
    }

    .carousel-slide {
      height: 100%;
      justify-content: center;

      img {
        width: auto;
        height: 100%;
      }
    }

    .counter {
      position: absolute;
      bottom: calc(var(--block-padding) - var(--margin-block-start) * 2);
      left: 50%;
      transform: translateX(-50%);
      margin-block-start: 0;
    }

    @media screen and (width < 600px) {
      --inline-padding: 8px;
    }
  }

  .close-modal-button {
    z-index: 1;
    position: absolute;
    top: 60px;
    right: 60px;
    display: flex;
    padding: 0;
    border: none;
    background-color: transparent;
    color: inherit;
    cursor: pointer;

    @media (prefers-reduced-motion: no-preference) {
      transition: color 0.2s ease;
    }

    @media (hover: hover) {
      &:hover {
        color: var(--hover-color);
      }
    }

    &:active {
      color: var(--hover-color);
    }
  }

  .modal-content {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
</style>

<script>
  function initCarousel(carouselElement: HTMLElement) {
    const track = carouselElement.querySelector<HTMLElement>('.carousel-track');
    const slides = Array.from(carouselElement.querySelectorAll('.carousel-slide'));
    const prevButton = carouselElement.querySelector<HTMLButtonElement>('.nav-button[data-action="prev"]');
    const nextButton = carouselElement.querySelector<HTMLButtonElement>('.nav-button[data-action="next"]');
    const counter = carouselElement.querySelector<HTMLElement>('.counter');

    let currentIndex = 0;
    const totalSlides = slides.length;

    function goToSlide(index: number, instant: boolean = false) {
      if (index < 0 || index >= totalSlides) return;

      currentIndex = index;
      updateUI(instant);
    }

    function nextSlide() {
      if (currentIndex < totalSlides - 1) {
        goToSlide(currentIndex + 1);
      }
    }

    function prevSlide() {
      if (currentIndex > 0) {
        goToSlide(currentIndex - 1);
      }
    }

    function updateUI(instant: boolean = false) {
      if (!track) return;

      if (instant) {
        track.style.transition = 'none';
      }

      track.style.transform = `translateX(-${currentIndex * 100}%)`;

      if (instant) {
        requestAnimationFrame(() => {
          track.style.transition = '';
        });
      }

      prevButton && (prevButton.disabled = currentIndex === 0);
      nextButton && (nextButton.disabled = currentIndex === totalSlides - 1);

      counter && (counter.textContent = `${currentIndex + 1} из ${totalSlides}`);

      slides.forEach((slide, index) => {
        const isActive = index === currentIndex;
        slide.setAttribute('aria-hidden', String(!isActive));

        if (isActive) {
          slide.removeAttribute('inert');
        } else {
          slide.setAttribute('inert', '');
        }
      });
    }

    prevButton?.addEventListener('click', prevSlide);
    nextButton?.addEventListener('click', nextSlide);

    carouselElement.addEventListener('keydown', (e) => {
      if (e.key === 'ArrowLeft') {
        e.preventDefault();
        prevSlide();
      } else if (e.key === 'ArrowRight') {
        e.preventDefault();
        nextSlide();
      }
    });

    let touchStartX = 0;
    let touchStartY = 0;
    let touchEndX = 0;
    let isHorizontalSwipe: boolean | null = null;
    const minSwipeDistance = 50;

    carouselElement.addEventListener('touchstart', (e) => {
      touchStartX = e.touches[0].clientX;
      touchStartY = e.touches[0].clientY;
      touchEndX = 0;
      isHorizontalSwipe = null;
    }, { passive: true });

    carouselElement.addEventListener('touchmove', (e) => {
      const currentX = e.touches[0].clientX;
      const currentY = e.touches[0].clientY;

      // Определяем направление при первом значительном движении
      if (isHorizontalSwipe === null) {
        const deltaX = Math.abs(currentX - touchStartX);
        const deltaY = Math.abs(currentY - touchStartY);

        // Минимальный порог для определения направления
        if (deltaX > 10 || deltaY > 10) {
          isHorizontalSwipe = deltaX > deltaY;
        }
      }

      // Блокируем вертикальный скролл при горизонтальном свайпе
      if (isHorizontalSwipe) {
        e.preventDefault();
        touchEndX = currentX;
      }
    }, { passive: false });

    carouselElement.addEventListener('touchend', () => {
      if (!isHorizontalSwipe || touchEndX === 0) {
        touchStartX = 0;
        touchStartY = 0;
        touchEndX = 0;
        isHorizontalSwipe = null;
        return;
      }

      const swipeDistance = touchStartX - touchEndX;

      if (Math.abs(swipeDistance) > minSwipeDistance) {
        if (swipeDistance > 0) {
          nextSlide();
        } else {
          prevSlide();
        }
      }

      touchStartX = 0;
      touchStartY = 0;
      touchEndX = 0;
      isHorizontalSwipe = null;
    });

    return { goToSlide };
  }

  const inlineCarousel = document.querySelector<HTMLElement>('.carousel[data-mode="inline"]');
  if (inlineCarousel) {
    initCarousel(inlineCarousel);

    const modal = document.querySelector<HTMLDialogElement>('#certificate-modal');
    const modalCarousel = document.querySelector<HTMLElement>('.carousel[data-mode="modal"]');
    const closeButton = modal?.querySelector<HTMLButtonElement>('.close-modal-button');
    const openButtons = document.querySelectorAll('[data-action="open-modal"]');

    let modalController: ReturnType<typeof initCarousel> | null = null;

    function openModal(slideIndex: number = 0) {
      if (!modal || !modalCarousel) return;

      document.body.style.overflow = 'hidden';
      modal.showModal();

      if (!modalController) {
        modalController = initCarousel(modalCarousel);
      }

      modalController.goToSlide(slideIndex, true);
    }

    openButtons.forEach(button => {
      button.addEventListener('click', (e) => {
        const target = e.currentTarget as HTMLElement;
        const slideIndex = parseInt(target.dataset.slideIndex || '0', 10);
        openModal(slideIndex);
      });
    });

    if (modal) {
      modal.addEventListener('close', () => {
        document.body.style.overflow = 'auto';
      });

      if (closeButton) {
        closeButton.addEventListener('click', () => {
          modal.close();
        });
      }
    }
  }
</script>
