---
import { getCollection, render } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import Icon from "../../components/shared/Icon.astro";
import type { TestData } from "../../scripts/test-runner";

const testDataFiles = import.meta.glob<{
    default: Omit<TestData, "id" | "title">;
}>("../../data/tests/*.json", { eager: true });

export async function getStaticPaths() {
    const tests = await getCollection("tests");

    return tests.map((test) => ({
        params: { id: test.id },
        props: { test },
    }));
}

const { test } = Astro.props;
const { Content } = await render(test);
const pageTitle = `Тест "${test.data.title}"`;

const jsonPath = `../../data/tests/${test.id}.json`;
const testData = {
    id: test.id,
    title: test.data.title,
    ...testDataFiles[jsonPath]?.default,
} satisfies TestData;

const testDescription = test.data.description ||
    `Пройдите тест "${test.data.title}" онлайн. Тест не заменяет консультацию специалиста.`;
---

<BaseLayout
    title={pageTitle}
    description={testDescription}
    bodyBgColor="#ede8f0"
    class="container"
>
    <h2 class="page-title">{test.data.title}</h2>

    <p class="test-warning">
        Онлайн тест не стоит использовать для самодиагностики! Для интерпретации
        результатов лучше обращаться к квалифицированным специалистам.
    </p>

    <div class="test-description">
        <Content />
    </div>

    <div id="test-runner">
        <div class="test-question-container">
            <p class="test-question-text" id="question-text" tabindex="-1"></p>
            <p class="test-progress" id="test-progress"></p>

            <div class="test-options" id="test-options"></div>

            <div class="test-navigation" id="test-navigation">
                <button type="button" class="nav-btn" id="prev-btn" hidden>
                    Назад
                </button>
                <button type="button" class="nav-btn" id="next-btn" hidden>
                    Вперёд
                </button>
            </div>
        </div>

        <div class="test-result-container" id="result-container" style="display: none;">
            <h3 id="result-heading" tabindex="-1">Ваш результат:</h3>
            <div id="result-content"></div>

            <div class="test-actions">
                <button type="button" class="btn btn-primary" id="share-btn">
                    Поделиться
                    <Icon name="share" size={32} />
                </button>
                <button type="button" class="btn btn-secondary" id="restart-btn">
                    Пройти заново
                </button>
            </div>
        </div>

        <template id="option-btn-template">
            <button type="button" class="option-btn"></button>
        </template>

        <template id="result-interpretation-template">
            <p class="result-interpretation"></p>
        </template>

        <template id="result-group-template">
            <div class="result-group">
                <p class="result-group-name"></p>
                <p class="result-group-interpretation"></p>
            </div>
        </template>
    </div>
</BaseLayout>

<style>
    .test-warning,
    .test-description {
        margin-block-end: 48px;
        font-size: 24px;
        line-height: 34px;
    }

    .test-warning {
        margin-block-start: 0;
        color: #de005c;
        font-style: italic;
    }

    .test-question-container,
    .test-result-container {
        padding: 32px;
        border-radius: 24px;
        background-color: var(--secondary-color);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

    .test-question-text,
    .test-progress {
        margin-block-start: 0;
    }

    .test-question-text {
        margin-block-end: 16px;
        font-size: 24px;
        line-height: 34px;
        font-weight: 600;
        text-align: center;
    }

    .test-progress {
        margin-block-end: 32px;
        font-size: 20px;
        line-height: 30px;
        text-align: center;
    }

    .test-options {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .test-navigation {
        display: flex;
        justify-content: space-between;
        margin-block-start: 24px;
        gap: 16px;
    }

    .nav-btn {
        width: 125px;
        padding: 10px;
        border: 1px solid var(--primary-color);
        border-radius: 12px;
        background-color: transparent;
        font-size: 20px;
        color: inherit;
        cursor: pointer;

        @media (prefers-reduced-motion: no-preference) {
            transition:
                border-color 0.2s ease,
                color 0.2s ease,
                background-color 0.2s ease;
        }

        &:last-child {
            margin-inline-start: auto;
        }

        @media (hover: hover) {
            &:hover {
                border-color: var(--hover-color);
                color: var(--hover-color);
            }
        }

        &:active {
            border-color: var(--hover-color);
            background-color: var(--hover-color);
            color: var(--secondary-color);
        }
    }

    .test-result-container h3 {
        margin-block-start: 0;
        margin-block-end: 40px;
        font-size: 24px;
        line-height: 34px;
        color: var(--accent-color);
    }

    .test-actions {
        display: flex;
        gap: 16px;
        justify-content: center;
        margin-block-start: 64px;
        flex-wrap: wrap;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 45px;
        border: none;
        border-radius: 50px;
        font-size: 24px;
        line-height: 32px;
        font-weight: 500;
        color: var(--secondary-color);
        cursor: pointer;

        @media (prefers-reduced-motion: no-preference) {
            transition: background-color 0.2s ease;
        }

        &.btn-primary {
            background-color: var(--primary-color);
        }

        &.btn-secondary {
            background-color: var(--accent-color);
        }

        @media (hover: hover) {
            &:hover {
                background-color: var(--hover-color);
            }
        }
    }

    .option-btn {
        padding: 10px;
        border: none;
        border-radius: 16px;
        background-color: var(--accent-color);
        font-size: 20px;
        line-height: 30px;
        color: var(--secondary-color);
        cursor: pointer;

        @media (prefers-reduced-motion: no-preference) {
            transition: transform 0.1s;
        }

        &.clicked,
        &.selected {
            background-color: var(--hover-color);
        }

        &.clicked {
            transform: scale(0.98);
        }

        @media (hover: hover) {
            &:hover {
                background-color: var(--hover-color);
            }
        }
    }

    .result-interpretation {
        font-size: 24px;
        line-height: 34px;
    }

    .result-group {
        font-size: 24px;
        line-height: 34px;

        & + & {
            margin-block-start: 48px;
        }
    }

    .result-group-name {
        margin-block-end: 12px;
        font-style: italic;
        color: var(--accent-color);
    }

    .result-group-interpretation {
        margin-block: 0;
    }
</style>

<style is:global>
    @media (prefers-reduced-motion: no-preference) {
        #question-text {
            view-transition-name: question-text;
        }

        #test-progress {
            view-transition-name: test-progress;
        }

        #test-options {
            view-transition-name: test-options;
        }

        @keyframes fade-in {
            from {
                opacity: 0;
            }
        }

        @keyframes fade-out {
            to {
                opacity: 0;
            }
        }

        @keyframes slide-from-right {
            from {
                transform: translateX(100px);
            }
        }

        @keyframes slide-to-left {
            to {
                transform: translateX(-100px);
            }
        }

        ::view-transition-old(question-text),
        ::view-transition-old(test-progress),
        ::view-transition-old(test-options) {
            animation:
                90ms cubic-bezier(0.4, 0, 1, 1) both fade-out,
                300ms cubic-bezier(0.4, 0, 0.2, 1) both slide-to-left;
        }

        ::view-transition-new(question-text),
        ::view-transition-new(test-progress),
        ::view-transition-new(test-options) {
            animation:
                210ms cubic-bezier(0, 0, 0.2, 1) 90ms both fade-in,
                300ms cubic-bezier(0.4, 0, 0.2, 1) both slide-from-right;
        }
    }
</style>

<script is:inline define:vars={{ testData }} data-astro-rerun>
    window.__TEST_DATA__ = testData;
</script>

<script>
    import { TestRunner } from "../../scripts/test-runner";

    document.addEventListener("astro:page-load", () => {
        const container = document.getElementById("test-runner");
        const testData = window.__TEST_DATA__;

        if (container && testData) {
            new TestRunner(container, testData);
        }
    });
</script>
