---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";

const tests = await getCollection("tests");
---

<BaseLayout title="Тесты" class="tests-page container">
    <h2 class="page-title">Тесты</h2>

    <ul class="tests-list">
        {
            tests.map((test) => (
                <li>
                    <a href={`/tests/${test.id}`}>{test.data.title}</a>
                </li>
            ))
        }
    </ul>
</BaseLayout>

<style is:global>
    .tests-page {
        position: relative;

        &::before {
            content: "";
            z-index: -1;
            position: absolute;
            inset: 0;
            display: block;
            background-image: url("/images/tests-cover.webp");
            background-repeat: no-repeat;
            background-size: cover;
            object-fit: fill;
            opacity: 0.1;
        }
    }
</style>

<style>
    .tests-list {
        list-style: none;
        padding: 0;
        margin: 0;

        li + li {
            margin-block-start: 24px;
        }

        a {
            font-size: 30px;
            line-height: 40px;

            @media screen and (width >= 1440px) {
                font-size: 40px;
                line-height: 50px;
            }
        }
    }
</style>
