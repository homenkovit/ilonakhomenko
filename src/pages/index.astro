---
import BaseLayout from "../layouts/BaseLayout.astro";
import AboutSection from "../components/index-page/AboutSection.astro";
import HelpSection from "../components/index-page/HelpSection.astro";
import PriceSection from "../components/index-page/PriceSection.astro";
import FaqSection from "../components/index-page/FaqSection.astro";
import ArticlesSection from "../components/index-page/ArticlesSection.astro";
import TestsSection from "../components/index-page/TestsSection.astro";
---

<BaseLayout
	description="Индивидуальные онлайн-консультации. Психологическая помощь при тревоге и депрессии, поддержка в эмиграции и при нейроотличиях."
	jsonLdType="ProfessionalService"
	class="index-page"
>
	<AboutSection />
	<HelpSection />
	<PriceSection />
	<FaqSection />
	<ArticlesSection />
	<TestsSection />
</BaseLayout>

<style is:global>
	main.index-page {
		overflow: hidden;
		padding-block: 0;

		:where(h1, h2, h3, h4, h5, h6) {
			font-weight: 400;
		}

		section {
			padding-block: 160px;

			@media screen and (width < 1440px) {
				padding-block: 100px;
			}

			@media screen and (width < 768px) {
				padding-block: 60px;
			}
		}
	}
</style>
