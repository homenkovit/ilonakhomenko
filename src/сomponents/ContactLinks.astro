<style>
    .contact-links {
        display: flex;
        gap: 28px;
        padding: 0;
        margin: 0;
        list-style: none;

        @media screen and (width < 768px) {
            flex-direction: column;
            gap: 24px;
        }
    }

    .contact-link {
        font-size: 18px;
        line-height: 24px;
        color: inherit;

        &:not(:hover) {
            text-decoration: none;
        }
    }
</style>
