    },
    {
        href: "mailto:ilonakhomenkopsy@gmail.com",
        label: "ilonakhomenkopsy@gmail.com",
    },
];
---

<ul class="contact-links">
    {
        contactLinks.map((link) => (
            <li>
                <a class="contact-link" href={link.href}>
                    {link.label}
                </a>
            </li>
        ))
    }
